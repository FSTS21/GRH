{{> "admin/header"}}
<div class="col-12 col-md-9 mt-3 mt-md-0 pl-0 pr-2">


  <div class="title-page col-12 p-2 pl-4 bg-dark">
    <h4 class="text-white font-weight-bold text-capitalize"> {{ page_title }} </h4>
  </div>
  <div class="col-12 bg-c-white p-2 pl-4 h-100 pb-1 pt-4">
    {{#if result}}
    <div class="col-12 alert alert-{{ternaryIf success 'success' 'danger'}} " role="alert">
      {{result}}
      <!-- We have sent a password reset link to your mailbox if it exists. -->
    </div>
    {{/if}}

    <table id="myTable" class="display">
      <thead>
        <tr>
          <th>Cadre</th>
          <th>Grade</th>
          <th>Echelon</th>
          <th>Avancement</th>
        </tr>
      </thead>
      <tbody>
        {{!-- 

        <tr>
          <td rowspan="2"> 44</td>
          <td rowspan="2"> 44</td>
          <td rowspan="2">22 </td>
          <td rowspan="1">11</td>

        </tr>

        <tr>
          <td rowspan="1" >
            55
          </td>
          <td rowspan="1" style="display: none;"></td>
          <td rowspan="1" style="display: none;"></td>
          <td rowspan="1" style="display: none;"></td>
        </tr>
        
        --}}
      
       {{#each results}}
        <tr>
          
          {{#if count }} <td rowspan="{{ count }}"> {{ setVar "i" 2 }}  {{libelle}} </td> {{/if}}
          {{#each grades}}
          {{#if count }} <td rowspan="{{ count}}">  {{ setVar "i" 3 }} {{libelle}}  </td> {{/if}}
            {{#each echelons}}
            {{#if avancements.length }} <td rowspan="{{ avancements.length }}">  {{ setVar "i" 4 }} {{indice}} </td> {{/if}}
              {{#each avancements}}
              <td rowspan="1">   {{code}}  </td>

              {{#for ../../../../i 4 1}}
                 {{ setVar "i" 3 }}<td  rowspan="1" style="display: none;">{{ this }} </td>
              {{/for }} 
              </tr>
              {{ setVar "i" 1 }}
              {{/each}}
            {{/each}}
          {{/each}}
        {{/each}}






      </tbody>
    </table>
  </div>
</div>


{{> "admin/footer"}}

<script>
  $(() => {
    $('#myTable').DataTable();
    $('#myTable tr:last').remove();
  })
</script>


</body>

</html>